<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050202"
        android:padding="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Title_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_2_thin"
                android:text="Przykładowy tytuł"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Date_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_2_thin"
                android:text="2020-01-01"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Desc_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_2_thin"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam efficitur venenatis dolor. Nullam eget eleifend libero. Aenean condimentum, leo sit amet sollicitudin tincidunt, nisi sapien gravida urna, id posuere ante ex ut orci. Ut eget augue convallis, fringilla metus et, gravida augue. Donec ullamcorper ultrices neque, sed vestibulum nisi finibus cursus. Aenean ultrices erat ac iaculis ornare. Vestibulum nec nisi in felis sodales porta nec non libero. Ut mattis, ex vitae bibendum eleifend, nibh lacus elementum ex, in suscipit ante nibh non enim.  Donec eu mauris ac leo laoreet elementum. Vestibulum iaculis arcu quis mattis posuere. Curabitur sit amet fermentum neque. Nam porttitor id sapien ac rutrum. Morbi sem eros, luctus in egestas id, scelerisque sed lorem. Duis pulvinar aliquet porttitor. Mauris volutpat ultrices suscipit. Donec gravida arcu in erat venenatis, eleifend tempor elit interdum. Mauris eleifend quis erat in convallis. Nunc blandit malesuada elit in elementum. Maecenas tempus a lectus non auctor. Morbi nec pretium ex."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivImageMain_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/imageV" />

            <TextView
                android:id="@+id/Url_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_2_thin"
                android:text="http://www.google.pl"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
